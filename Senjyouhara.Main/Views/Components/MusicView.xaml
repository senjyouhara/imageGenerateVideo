            <ListBox
                d:ItemsSource="{d:SampleData ItemCount=5}"
                BorderThickness="0"
                ItemsSource="{Binding FileNameItems}"
                SelectedItem="{Binding SelectedItem}"
                SelectionChanged="{s:Action FileNameSelectedChange}"
                SelectionMode="Single"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.Style>
                    <Style TargetType="ListBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBox">
                                    <Border>
                                        <ScrollViewer>
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Style>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Padding="6,0" Background="Transparent" x:Name="Bd">
                                        <Grid VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="120" />
                                            </Grid.ColumnDefinitions>
                                            <UniformGrid Rows="2" Margin="4 8">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        x:Name="t1"
                                                        Margin="0,2,0,0"
                                                        FontFamily="{StaticResource Iconfont}"
                                                        FontSize="18"
                                                        Foreground="#ffffff"
                                                        Text="&#xe66a;" />
                                                    <TextBlock
                                                        x:Name="Name"
                                                        FontSize="16"
                                                        Foreground="#ffffff"
                                                        Text="{Binding Title}" />
                                                </StackPanel>
                                                <TextBlock
                                                    x:Name="t2"
                                                    Margin="0,4,0,0"
                                                    FontSize="16"
                                                    Foreground="#cccccc"
                                                    Text="{Binding Album}" />
                                            </UniformGrid>

                                            <Border Grid.Column="1" VerticalAlignment="Stretch" MouseUp="{s:Action ListItemPlayMouseDown}">
                                                <!-- <Border.InputBindings> -->
                                                <!--     <MouseBinding -->

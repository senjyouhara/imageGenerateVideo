<UserControl
    x:Class="Senjyouhara.Main.Views.Components.MusicView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:Senjyouhara.Common.Converter;assembly=Senjyouhara.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converter:InvertingBooleanToVisibilityConverter x:Key="InvertingBooleanToVisibilityConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <Border
            HorizontalAlignment="Stretch"
            Background="#1b6093"
            CornerRadius="4 4 0 0">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid VerticalAlignment="Center">
                    <Border
                        Height="2"
                        Background="#000000"
                        Opacity="0.3" />
                    <Border Height="2" Background="#dddddd" />
                    <Border
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Left"
                        Background="#1b6093"
                        BorderBrush="#dddddd"
                        BorderThickness="2"
                        CornerRadius="20"
                        RenderTransformOrigin="20 0">
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="Progressbar" X="0" Y="0" />
                        </Border.RenderTransform>
                    </Border>
                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="Progressbar"
                                        Storyboard.TargetProperty="X"
                                        To="195"
                                        Duration="0:0:8" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Grid.Triggers>
                </Grid>
                <StackPanel
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <!--  Previous  -->
                    <Button
                        x:Name="PreviousButton"
                        Margin="0,0,13,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{s:Action PreviousCommand}"
                        Style="{StaticResource TransparentButton}"
                        ToolTip="上一个">
                        <TextBlock
                            FontFamily="{StaticResource MusicIconfont}"
                            FontSize="32"
                            Foreground="{StaticResource MusicFontColor}"
                            Text="&#xe670;" />
                    </Button>
                    <!--  Play and pause  -->
                    <Grid>
                        <!--  Ring  -->
                        <!-- <ProgressBar Value="40"></ProgressBar> -->
                        <!-- <dc:ProgressRing Width="20" Height="20" Foreground="{DynamicResource Brush_PrimaryText}" IsActive="True" Visibility="{Binding IsLoadingTrack,Converter={StaticResource BooleanToVisibilityConverter}}"/> -->
                        <Grid Visibility="{Binding IsLoadingTrack, Converter={StaticResource InvertingBooleanToVisibilityConverter}}">
                            <!--  Play  -->
                            <Button
                                x:Name="PlayButton"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Command="{s:Action PlayCommand}"
                                Style="{StaticResource TransparentButton}"
                                ToolTip="播放"
                                Visibility="{Binding ShowPause, Converter={StaticResource InvertingBooleanToVisibilityConverter}}">
                                <TextBlock
                                    FontFamily="{StaticResource MusicIconfont}"
                                    FontSize="32"
                                    Foreground="{StaticResource MusicFontColor}"
                                    Text="&#xe66b;" />
                            </Button>
                            <!--  Pause  -->
                            <Button
                                x:Name="PauseButton"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Command="{s:Action PauseCommand}"
                                Style="{StaticResource TransparentButton}"
                                ToolTip="暂停"
                                Visibility="{Binding ShowPause, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock
                                    FontFamily="{StaticResource MusicIconfont}"
                                    FontSize="32"
                                    Foreground="{StaticResource MusicFontColor}"
                                    Text="&#xe66c;" />
                            </Button>
                        </Grid>
                    </Grid>
                    <!--  Next  -->
                    <Button
                        x:Name="NextButton"
                        Margin="13,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{s:Action NextCommand}"
                        Style="{StaticResource TransparentButton}"
                        ToolTip="下一首">
                        <TextBlock
                            FontFamily="{StaticResource MusicIconfont}"
                            FontSize="32"
                            Foreground="{StaticResource MusicFontColor}"
                            Text="&#xe672;" />
                    </Button>
                    <!--  volume  -->
                    <Button
                        x:Name="VolumeButton"
                        Margin="13,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{s:Action VolumeCommand}"
                        Style="{StaticResource TransparentButton}"
                        ToolTip="音量">
                        <TextBlock
                            FontFamily="{StaticResource MusicIconfont}"
                            FontSize="32"
                            Foreground="{StaticResource MusicFontColor}"
                            Text="&#xe831;" />
                    </Button>
                    <!--  playlist  -->
                    <Button
                        x:Name="PlayListButton"
                        Margin="13,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{s:Action PlayListCommand}"
                        Style="{StaticResource TransparentButton}"
                        ToolTip="播放列表">
                        <TextBlock
                            FontFamily="{StaticResource MusicIconfont}"
                            FontSize="32"
                            Foreground="{StaticResource MusicFontColor}"
                            Text="&#xe669;" />
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
        <Border
            MinHeight="100"
            MaxHeight="300"
            Background="#1c5076">
            <ListBox
                d:ItemsSource="{d:SampleData ItemCount=5}"
                BorderThickness="0"
                ItemsSource="{Binding FileNameItems}"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.Style>
                    <Style TargetType="ListBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBox">
                                    <Border>
                                        <ScrollViewer>
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Style>

                <ListBox.Resources>
                    <SolidColorBrush
                        x:Key="Item.MouseOver.Background"
                        Opacity="0.5"
                        Color="#000000" />
                    <SolidColorBrush x:Key="Item.MouseOver.Border" Color="#3DDADADA" />
                    <SolidColorBrush x:Key="Item.SelectedInactive.Background" Color="Transparent" />
                    <SolidColorBrush x:Key="Item.SelectedInactive.Border" Color="#3DDADADA" />
                    <SolidColorBrush x:Key="Item.SelectedInactive.Foreground" Color="#FFFFFFFF" />
                    <SolidColorBrush x:Key="Item.SelectedActive.Background" Color="#cccccc" />
                    <SolidColorBrush x:Key="Item.SelectedActive.Border" Color="#FF0B7AFF" />
                    <SolidColorBrush x:Key="Item.SelectedActive.Foreground" Color="#FFFFFFFF" />
                    <Style TargetType="ListBoxItem">
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border
                                        x:Name="Bd"
                                        Padding="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        SnapsToDevicePixels="true">
                                        <ContentPresenter
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.MouseOver.Background}" />
                                            <!-- <Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource Item.MouseOver.Border}"/> -->

                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="Selector.IsSelectionActive" Value="False" />
                                                <Condition Property="IsSelected" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.SelectedInactive.Background}" />
                                            <!-- <Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource Item.SelectedInactive.Border}"/> -->
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="Selector.IsSelectionActive" Value="True" />
                                                <Condition Property="IsSelected" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.SelectedActive.Background}" />
                                            <!-- <Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource Item.SelectedActive.Border}"/> -->
                                        </MultiTrigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Bd" Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>

                                </ControlTemplate>

                            </Setter.Value>
                        </Setter>
                    </Style>

                </ListBox.Resources>


                <!-- <ListBox.ItemContainerStyle> -->
                <!--     <Style TargetType="ListBoxItem"> -->
                <!--         <Setter Property="BorderThickness" Value="0"/> -->
                <!--         <Setter Property="HorizontalContentAlignment" Value="Stretch" /> -->
                <!--         <Style.Triggers> -->
                <!--             <Trigger Property="IsSelected" Value="True"> -->
                <!--                 <Setter Property="Background" Value="Green"/> -->
                <!--             </Trigger> -->
                <!--             <Trigger Property="IsMouseOver" Value="True"> -->
                <!--                 <Setter Property="Background" Value="#00000060"/> -->
                <!--             </Trigger> -->
                <!--         </Style.Triggers> -->
                <!--     </Style> -->
                <!--    -->
                <!-- </ListBox.ItemContainerStyle> -->
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="6,8" Background="Transparent">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="120" />
                                </Grid.ColumnDefinitions>
                                <UniformGrid Rows="2">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            x:Name="t1"
                                            Margin="0,2,0,0"
                                            FontFamily="{StaticResource MusicIconfont}"
                                            FontSize="18"
                                            Foreground="#ffffff"
                                            Text="&#xe66a;" />
                                        <TextBlock
                                            FontSize="16"
                                            Foreground="#ffffff"
                                            Text="あたらよ~夏霞" />
                                    </StackPanel>
                                    <TextBlock
                                        x:Name="t2"
                                        Margin="0,4,0,0"
                                        FontSize="16"
                                        Foreground="#cccccc"
                                        Text="あたらよ~夏霞" />
                                </UniformGrid>

                                <Border Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        x:Name="t3"
                                        Margin="12,0"
                                        FontFamily="{StaticResource MusicIconfont}"
                                        FontSize="32"
                                        Foreground="{StaticResource MusicFontColor}"
                                        Text="&#xe66b;" />

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#00000050" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    x:Name="t4"
                                    Grid.Column="2"
                                    Margin="12,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="{StaticResource MusicFontColor}"
                                    Text="4:36"
                                    TextAlignment="Right" />
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <Trigger Property="ListBoxItem.IsMouseOver" Value="True">
                                <Setter TargetName="t1" Property="TextElement.Foreground" Value="#ffffff" />
                                <Setter TargetName="t2" Property="TextElement.Foreground" Value="#ffffff" />
                                <Setter TargetName="t3" Property="TextElement.Foreground" Value="#ffffff" />
                                <Setter TargetName="t4" Property="TextElement.Foreground" Value="#ffffff" />
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </StackPanel>

</UserControl>